{
  "openapi":"3.0.0",
  "info":{
    "title":"Schedules Documentation",
    "description":"This is an API to manager the schedules",
    "version":"1.0.0",
    "contact":{
      "email":"svvictorelias@gmail.com"
      }
    },
    "paths":{
      "/schedules":{
        "post":{
          "tags":["Schedules"],
          "summary":"Create a schedule rule",
          "description":"Create a new schedule rule with three different types<br>1 - Daily: 'everyDay'<br>2 - weekly: 'week'<br>3 - Specific day: 'onlyOne'",
          "requestBody":{
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "name":{
                      "type":"string"
                    },
                    "description":{
                      "type":"string"
                    }
                  }
                },
                  "examples":{
                    "Specific Day":{
                    "value":{
                      "type":"onlyOne",
                      "day":"25-01-2023",
                      "intervals":[
                        {
                          "start":"15:00",
                          "end":"16:00"
                        },
                        {
                          "start":"17:00",
                          "end":"18:00"
                        }
                      ]
                      }
                    },
                    "Weekly":{
                    "value":{
                      "type":"week",
                      "day":"1,3,5",
                      "intervals":[
                        {
                          "start":"15:00",
                          "end":"16:00"
                        }
                      ]
                      }
                    },   
                    "Daily":{
                    "value":{
                      "type":"everyDay",
                      "day":"all",
                      "intervals":[
                        {
                          "start":"20:00",
                          "end":"21:00"
                        }
                      ]
                      }
                    }   
                }
              }
            }
          },
          "responses":{
            "201":{
              "description":"Created"
            },
            "500":{
              "description":"Category already exists"
            }
          }
        },
        "get":{
          "tags":["Category"],
          "summary":"List all categories",
          "description":"List all categories",
          "responses":{
            "200":{
              "description":"Sucess",
              "content":{
                "application/json":{
                  "schema":{
                    "type":"array",
                    "items":{
                      "type":"object",
                      "properties":{
                        "name":{
                          "type":"string"
                        },
                        "description":{
                          "type":"string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
}